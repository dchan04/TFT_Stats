@model IEnumerable<TFT_Stats.Models.ViewModel.CompanionVM>
<style>
    img {
        width: 75px;
        height: auto;
    }

    table, tr, th, thead, tbody {
        color: white;
    }

    thead {
        border: 2.5px solid #0b0b0b;
    }

    tr {
        border-bottom-style: double;
        border-width: 1px;
        border-color: black;
        background-color: #1e1e1e;
    }

        tr:nth-child(even) {
            background-color: #2c2c2c;
        }

    a.my-class {
        color: #333333
    }

        a.my-class:active {
            color: #666666
        }

        a.my-class:link {
            color: #999999
        }

        a.my-class:visited {
            color: #CCCCCC
        }
</style>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.ActionLink("Companion Name", "CompanionView", new {sortOrder = ViewBag.NameSortParm}, new { @class = "my-class" })
                </th>
                <th>
                    @Html.ActionLink("Companion Name", "CompanionView", new {sortOrder = ViewBag.Species}, new { @class = "my-class" })
                </th>
                <th>
                    Level 1
                </th>
                <th>
                    Level 2
                </th>
                <th>
                    Level 3
                </th>
                <th>
                    @Html.ActionLink("Count", "CompanionView", new {sortOrder = ViewBag.Count}, new { @class = "my-class" })
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImgUrl)" onerror="this.src='@Url.Content("https://static.wikia.nocookie.net/leagueoflegends/images/7/7f/Molediver_Astronaut_Tier_3.png")';this.onerror='';" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Species)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                </tr>
            }
        </tbody>
    </table>
</div>